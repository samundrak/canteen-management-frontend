<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      {{ loading-dimmer status=isSubmitting}}
      <form {{ action "handleLogin" on="submit"}}>
        {{#form-field label="Email Address" errors=model.errors.email}}
          {{input value=model.credentials.email class='form-control'}}
        {{/form-field}}
        {{#form-field label="Password" errors=model.errors.password}}
          {{input type="password" value=model.credentials.password class='form-control'}}
        {{/form-field}}
        <button type="submit" class="btn btn-default">Login</button>
      </form>
      <em>Don't have account?
        {{#link-to 'register'}}
          Register Here
        {{/link-to}}
      </em>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>