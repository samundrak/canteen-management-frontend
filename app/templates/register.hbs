<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      {{ loading-dimmer status=isSubmitting}}
      <form {{ action "handleRegister" on="submit"}} name="register">
        {{#form-field label="First Name" errors=model.errors.first_name}}
          {{input value=model.credentials.first_name class='form-control' name="first_name"}}
        {{/form-field}}
        {{#form-field label="Last Name" errors=model.errors.last_name}}
          {{input value=model.credentials.last_name class='form-control' name="last_name"}}
        {{/form-field}}
        {{#form-field label="Email Address" errors=model.errors.email}}
          {{input value=model.credentials.email class='form-control' name="email"}}
        {{/form-field}}
        {{#form-field label="Password" errors=model.errors.password}}
          {{input type="password" value=model.credentials.password class='form-control' name="password"}}
        {{/form-field}}
        <button name="submit" type="submit" class="btn btn-default">Register</button>
      </form>
      <em>
        Already have account?
        {{#link-to 'login'}}
        Login
        {{/link-to}}
      </em>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>